<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">




    <ImageView
        android:layout_width="60dip"
        android:layout_height="60dip"
        android:src="@drawable/fit_steps"
        android:tint="@color/dashboard_icons_color"
        android:layout_gravity="center_horizontal"
        android:contentDescription="@string/imageview_steps"/>

    <TextView
        android:id="@+id/countedSteps"
        android:layout_width="wrap_content"
        android:layout_height="?attr/actionBarSize"
        android:layout_gravity="center"
        android:text="@string/step_count"
        android:textSize="33sp"
        android:textColor="#757575"
        android:layout_marginBottom="25dip"
        android:contentDescription="@string/tv_stepcount_cd"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:layout_gravity="bottom"
        android:background="#BDBDBD"
        android:layout_marginTop="15dip"
        />

    <TextView
        android:id="@+id/tv_title_DataUsed"
        android:layout_width="wrap_content"
        android:layout_height="?attr/actionBarSize"
        android:layout_gravity="center|bottom"
        android:gravity="center"
        android:text="@string/steps_title"
        android:textSize="18sp"
        android:textColor="#757575"/>

</LinearLayout>